<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">
    <preConditions>
        <runningAs username="liquibase"/>
    </preConditions>

    <changeSet id="1" author="gabizou">
        <createTable tableName="artifacts" schemaName="artifact_versions">
            <column name="group_id" type="varchar(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="artifactId" type="varchar(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="display_name" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createTable tableName="versions" schemaName="artifacts">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="version" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="artifact_id" type="int">
                <constraints nullable="false"
                             primaryKey="true"
                             referencedTableSchemaName="artifacts"
                             referencedTableName="artifacts"
                             referencedColumnNames="id"
                             foreignKeyName="fk_artifact_id"
                             deleteCascade="true"/>
            </column>
        </createTable>
        <createTable tableName="version-tags" schemaName="artifacts">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="version_id">
                <constraints primaryKey="true"
                             foreignKeyName="fk_version_id"
                             referencedTableName="versions"
                             referencedTableSchemaName="artifacts"
                             referencedColumnNames="id"
                             deleteCascade="true"
                             nullable="false"/>
            </column>
            <column name="tag_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="tag_value" type="varchar(255)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
